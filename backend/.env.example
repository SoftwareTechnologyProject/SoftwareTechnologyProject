# ==================== ENVIRONMENT VARIABLES ====================
# ‚ö†Ô∏è  IMPORTANT: Copy this file to .env and fill with REAL values
# ‚ö†Ô∏è  NEVER commit .env file to git!

# ==================== SERVER CONFIGURATION ====================
SERVER_PORT=8080

# ==================== DATABASE CONFIGURATION ====================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/bookstore
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_strong_password_here_min_12_chars

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# PostgreSQL Database (for Docker Compose)
POSTGRES_DB=bookstore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here_min_12_chars

# ==================== JWT SECURITY (üî¥ CRITICAL!) ====================
# Generate strong key with: openssl rand -base64 64
# MUST BE AT LEAST 256 bits (32 bytes) for HS256 algorithm
# Example: openssl rand -base64 64 | tr -d '\n'
KEY_JWT=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_256_BITS_FOR_PRODUCTION

# ==================== VNPAY PAYMENT (üî¥ CRITICAL!) ====================
# Get from VNPay merchant portal: https://sandbox.vnpayment.vn/
# NEVER share these keys publicly!
VNPAY_TMN_CODE=your_vnpay_terminal_code
VNPAY_HASH_SECRET=your_vnpay_secret_key_from_portal

# ==================== EMAIL CONFIGURATION ====================
# Brevo (formerly Sendinblue) SMTP credentials
MAIL_USERNAME=your_brevo_smtp_username
MAIL_PASSWORD=your_brevo_smtp_password

# ==================== AWS S3 CONFIGURATION ====================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=bookstore-images-prod
AWS_S3_BLOG_BUCKET_NAME=blogadmin-s3-prod

# ==================== GEMINI AI CONFIGURATION ====================
GEMINI_API_KEY=your_google_gemini_api_key

# ==================== SAMPLE DATA ====================
# Set to 'false' to skip loading sample data
LOAD_SAMPLE_DATA=true
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}

# JPA config
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# App
SERVER_PORT=8080
